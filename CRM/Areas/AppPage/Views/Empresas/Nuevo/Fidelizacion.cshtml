@section script{
   <script src="~/Assets/plugins/bootstrap-validator/bootstrapValidator.min.js"></script>
   <script src="~/Assets/plugins/masked-input/jquery.maskedinput.min.js"></script>
   <script src="~/Assets/js/jquery.rut.chileno.min.js"></script>
   <script>
       var rs_GestionList = [];
       var elm_Form = {};
       var herramientas = {
           actualizaVistaLista: function (rs_gstL) {
               
               $("#resultado-gestion-listado").html("");
               $.each(rs_gstL, function (i, o) {

                   var __container = $('<div>').addClass('media col-md-8 mar-btm seleccionabless').on("click", function (e) {
                       $(this).find(".media-buttons").toggle("slow");
                       if (!$(this).find(".caret").hasClass("caret-reversed")) {
                           $(this).find(".caret").addClass("caret-reversed")
                       } else {
                           $(this).find(".caret").removeClass("caret-reversed")
                       }
                   });
                   var __media_body = $('<div>').addClass('media-body')
                                                .append($("<span>").addClass("caret icono-down"))
                                                .append($('<h5>').addClass('media-heading').text(o.tipo + " " + (o.fecha != null ? "(" + o.fecha + ")" : "")))
                                                .append($("<p>").addClass("mar-lft").text(o.contenido))
                   var __media_buttons = $('<div>').addClass('media-buttons').css('display', 'none');
                   var __edit_button = $('<button>').addClass('btn btn-default btn-icon btn-circle editar').prop({ title: 'Editar', type: 'button' }).append($('<i>').addClass('ion-edit icon-sm')).on("click", function () {

                       var index = $(".editar").index(this);
                       var gest = rs_GestionList[index];

                       if (gest.tipo == "compromiso") {
                           $("#TipoRG").val("1");
                           $("#fecha_compromiso").val(gest.fecha);
                           $("#ta_compromiso").val(gest.contenido);
                       }
                       else if (gest.tipo == "comentario") {
                           $("#TipoRG").val("2");
                           $("#ta_comentario").val(gest.contenido);
                       }
                       else {
                           $("#TipoRG").val("");
                       }
                       $(".bt-accion").data("edita", index);
                       $("#TipoRG").trigger("change");


                   });

                   var __delete_button = $('<button>').addClass('btn btn-default btn-icon btn-circle eliminar').prop({ title: 'Eliminar', type: 'button' }).append($('<i>').addClass('ion-trash-a icon-sm')).on("click", function () {

                       var index = $(".eliminar").index(this);
                       rs_GestionList.splice(index, 1);
                       herramientas.actualizaVistaLista(rs_GestionList);

                   });

                   __media_buttons.append(__edit_button).append(__delete_button);
                   __container.append(__media_body).append(__media_buttons);
                   $("#resultado-gestion-listado").append(__container);
               });
           },
           renderizaFormulario: function (e) {

               $('#Rut').val(e.Empresa.emp_rut).mask('99.999.999-*');
               $('#RazonSocial').val(e.Empresa.emp_nombre);
               $('#Holding').val(e.Empresa.emp_holding);

               $("#Estamento").val(e.Fidelizacion.fide_estamento);
               $("#Actividad").val(e.Fidelizacion.fide_actividad);
               $("#Cobertura").val(e.Fidelizacion.fide_cobertura);
               $("#NombreRepresentante").val(e.Representante.rep_nombre);
               $("#CargoRepresentante").val(e.Representante.rep_cargo);
               $("#IdRepresentante").val(e.Representante.rep_id);
               $("#Fecha_Fidelizacion").val(e.Fidelizacion.fide_fecha_calendario.toFecha());

               
               
               var areasExisten = e.Ambitos.map(function (x) {
                   return x.Area.area_id
               });

               var ambitosExisten = e.Ambitos.map(function (x) {
                   return x.AmbitoArea.ambito_id;
               });

               $.ajaxSetup({ async: false });
               $('.chk-padres').each(function(i,e) {
                   if($.inArray(parseInt($(e).val()),areasExisten) > -1)
                   {
                       $(e).trigger("click");
                   }
               });

               $('.chk-hijos').each(function (i, e) {
                   if ($.inArray(parseInt($(e).val()), ambitosExisten) > -1) {
                       $(e).prop('checked', true);
                   }
               });
               $.ajaxSetup({ async: true });


           },
           cargarDatos: function () {
               var id = $("#IdFidelizacion").val();

               if(id > 0)
               {
                   $.SecGetJSON(BASE_URL + "/Motor/api/Empresas/data-fidelizacion", { id: id }, function (response) {
                       herramientas.renderizaFormulario(response)

                       rs_GestionList = response.ResultadoGestion.map(function (e) {
                           return {
                               tipo: e.resg_tipo,
                               fecha: e.resg_fecha.toFecha(),
                               contenido: e.resg_comentarios
                           }
                       });
                       herramientas.actualizaVistaLista(rs_GestionList)


                   }).fail(function () { })
               }
           }
       }


       $(function () {
           
           herramientas.cargarDatos();

           $('#Rut').mask('99.999.999-*');

           $(".bt-accion").on("click", function () {

               const indix = $(this).data("edita");

               if( $(this).hasClass("compromiso") )
               {
                   var ob_Inject = {
                       tipo: 'compromiso',
                       fecha: $("#fecha_compromiso").val(),
                       contenido: $("#ta_compromiso").val()
                   }
                   

                   if (indix > -1)
                   {
                       rs_GestionList[indix] = ob_Inject;
                   }
                   else
                   {
                       rs_GestionList.push(ob_Inject);
                   }
                   herramientas.actualizaVistaLista(rs_GestionList);

                   $("#fecha_compromiso").val("")
                   $("#ta_compromiso").val("")
                   $("#resultado-gestion-compromiso").hide();
                   
               }
               else if( $(this).hasClass("comentario") )
               {
                   var ob_Inject = {
                       tipo: 'comentario',
                       fecha: null,
                       contenido: $("#ta_comentario").val()
                   }
                   
                   
                   if (indix > -1) {
                       rs_GestionList[indix] = ob_Inject;
                   }
                   else {
                       rs_GestionList.push(ob_Inject);
                   }
                   herramientas.actualizaVistaLista(rs_GestionList);

                   $("#ta_comentario").val("")
                   $("#resultado-gestion-comentario").hide();
               }

               //Reseteo de Variables y Elementos
               $("#TipoRG").val("");
               $(".bt-accion").data("edita", -1);
               
           });

           $("#TipoRG").on("change", function () {

               if($(this).val() == 1)
               {
                   $("#resultado-gestion-compromiso").removeClass("hidden");
                   $("#resultado-gestion-compromiso").show();
                   $("#resultado-gestion-comentario").hide();
               }
               else if ($(this).val() == 2) {
                   $("#resultado-gestion-comentario").removeClass("hidden");
                   $("#resultado-gestion-compromiso").hide();
                   $("#resultado-gestion-comentario").show();
               }
               else {
                   $("#resultado-gestion-compromiso").hide();
                   $("#resultado-gestion-comentario").hide();
               }
           });


           $.SecGetJSON(BASE_URL + "/Motor/Assets/data/areas.json", function (respuesta) {
               $.each(respuesta, function (i, e) {
                   var dv_contenedor = $('<div>').addClass('checkbox');
                   var _lbl = $('<label>').prop({ for: 'area-fdlz-' + i }).text(e.nombre);
                   var _chk_box = $('<input>').addClass('magic-checkbox chk-padres').prop({ type: 'checkbox', id: 'area-fdlz-' + i, name: 'Areas__' }).val(e.id).on("click", function () {
                       $that = $(this);
                       var _class_name = e.nombre;
                       var _cluster = $('<div>').addClass('cluster').addClass(_class_name).append($('<hr>').addClass('delim')).append($('<p>').addClass('text-main').text(_class_name));
                       if ($that.is(":checked"))
                       {
                           $.SecGetJSON(BASE_URL + "/Motor/Assets/data/ambitos.json", function (respuesta) {
                               $.each(respuesta, function (ni, ne) {

                                   if (ne.padre == $that.val()) {
                                       var dv_sb_contenedor = $('<div>').addClass('checkbox');
                                       var _sb_lbl = $('<label>').prop({ for: 'ambito-fdlz-' + ni }).text(ne.nombre);
                                       var _sb_chk_box = $('<input>').addClass('magic-checkbox chenv chk-hijos').prop({ type: 'checkbox', id: 'ambito-fdlz-' + ni }).val(ne.id);
                                       _cluster.append(dv_sb_contenedor.append(_sb_chk_box).append(_sb_lbl));
                                   }
                               });
                           });
                           $("#ambitos_fideliza").append(_cluster);
                       }
                       else
                       {
                           $('.' + _class_name).remove();
                       }
                   });
                   
                   $("#areas_fideliza").append(dv_contenedor.append(_chk_box).append(_lbl));
               });
           });


           $('#Calendario_Fecha_Fidelizacion .input-group.date').datepicker(
                { autoclose: true, format: 'dd-mm-yyyy', startDate: "0d", language: "es", daysOfWeekDisabled: [6, 0], todayHighlight: true }
            ).on('changeDate', function (e) {
                $('#form-ingreso').bootstrapValidator('updateStatus', 'Fecha_Fidelizacion', 'NOT_VALIDATED').bootstrapValidator('validateField', 'Fecha_Fidelizacion');
            });

           $('#Calendario_Fecha_Compromiso .input-group.date').datepicker(
                { autoclose: true, format: 'dd-mm-yyyy', startDate: "0d", language: "es", daysOfWeekDisabled: [6, 0], todayHighlight: true }
            ).on('changeDate', function (e) {
                //$('#datos-gestion').bootstrapValidator('updateStatus', 'ges_prox_gestion', 'NOT_VALIDATED').bootstrapValidator('validateField', 'ges_prox_gestion');

                console.log(e)

            });



           $('#form-ingreso').bootstrapValidator({
               excluded: [':disabled'],
               fields: {
                   Rut: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Ingresar un Rut'
                           },
                           callback: {
                               message: 'Rut Invalido',
                               callback: function (value, validator, $field) {

                                   if ($.rut.validar(value))
                                   {
                                       $field.trigger("empresa.onRutValidado");
                                   }

                                   return $.rut.validar(value);
                                   
                               }
                           }
                       }
                   },
                   Estamento: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Seleccionar un Estamento'
                           }
                       }
                   },
                   Actividad: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Seleccionar una Actividad'
                           }
                       }
                   },
                   Cobertura: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Ingresar una Cobertura'
                           }
                       }
                   },
                   NombreRepresentante: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Ingresar el Nombre del Representante de la Empresa'
                           }
                       }
                   },
                   CargoRepresentante: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Ingresar el Cargo del Representante de la Empresa'
                           }
                       }
                   },
                   Fecha_Fidelizacion: {
                       validators: {
                           notEmpty: {
                               message: 'Debe Ingresar el Cargo del Representante de la Empresa'
                           }
                       }
                   }
               }

           }).on('success.form.bv', function (e) {
               // Prevén que se mande el formulario
               e.preventDefault();
               var $form = $(e.target);
               var __Ambitos = [];


               $('.chenv').each(function (i,e) {
                   if($(e).is(":checked"))
                   {
                       var amb = {
                           id: 0,
                           valor: $(e).val()
                       }
                       __Ambitos.push(amb);
                   }
               })
               
               var envio = {
                   IdFidelizacion: $('#IdFidelizacion').val(),
                   Rut: $('#Rut').val(),
                   Nombre: Evalua($('#RazonSocial').val()),
                   Holding: Evalua($('#Holding').val()),
                   Estamento: $('#Estamento').val(),
                   Actividad: $('#Actividad').val(),
                   Cobertura: $('#Cobertura').val(),
                   IdRepresentante: $('#IdRepresentante').val(),
                   NombreRepresentante: $('#NombreRepresentante').val(),
                   CargoRepresentante: $('#CargoRepresentante').val(),
                   FechaFidelizacion: $('#Fecha_Fidelizacion').val(),
                   Ambitos: __Ambitos,
                   ResultadosGestion: rs_GestionList
               }

               $.SecPostJSON(BASE_URL + "/Motor/api/Empresas/guardar-fidelizacion", envio, function (response) {

                   $('#btn-guardar').niftyOverlay('hide');
                   $.niftyNoty({
                       type: 'success',
                       container: 'floating',
                       title:'OK',
                       message: response.Mensaje,
                       focus: false,
                       closeBtn: true
                   });

               }).fail(function (jqxhr, textStatus, error) {
                   $.niftyNoty({
                       type: 'danger',
                       container: 'floating',
                       title: 'Error',
                       message: jqxhr.responseJSON.ExceptionMessage,
                       focus: false,
                       closeBtn: true
                   });
               });
           });


           $('#form-ingreso').on("submit", function (e) {
               e.preventDefault();
               return false;
           })

           $("#Rut").on("keyup", function () {
               $('#form-ingreso').bootstrapValidator('updateStatus', 'Rut', 'NOT_VALIDATED').bootstrapValidator('validateField', 'Rut');
           })

           $("#Rut").on("empresa.onRutValidado", function (event) {
               const rutEmpresa = $(this).val().replace(/\./g, '');
               $.SecGetJSON(BASE_URL + "/Motor/api/Empresas/data-empresa/" + rutEmpresa, function (respuesta) {
                   $('#RazonSocial').val(respuesta.NombreEmpresa);
                   $('#Holding').val(respuesta.NombreHolding);
               });
           });

           


       });
   </script>
   



}

