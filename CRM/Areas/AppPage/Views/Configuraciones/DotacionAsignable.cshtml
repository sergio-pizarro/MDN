@{
    Layout = "~/Areas/AppPage/Views/Shared/_Layout.cshtml";
}
<!--Switchery [ OPTIONAL ]-->
<link href="~/Assets/plugins/switchery/switchery.min.css" rel="stylesheet">
<link href="~/Assets/plugins/magic-check/css/magic-check.min.css" rel="stylesheet">

<!--Bootstrap Select [ OPTIONAL ]-->
<link href="~/Assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet">

<input id="rdkContactoSi" class="magic-radio" type="radio" name="inline-form-radioContacto" value="SI">



<div id="page-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="eq-height">
                <div class="col-lg-6 eq-box-lg">
                    <div class="panel" style="border-radius: 12px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">Ejecutivos</h3>
                        </div>
                        <div class="panel-body">
                            <p class="text-semibold text-main">Seleccione un ejecutivo</p>
                            <table class="table table-hover table-vcenter">
                                <thead style="font-size: 11px;">
                                    <tr>
                                        <th class="min-width">Asignar</th>
                                        <th style="width:30%;">Ejecutivo</th>
                                        <th>Cargo</th>
                                        <th>Estado Asignado</th>
                                    </tr>
                                </thead>
                                <tbody id="ejecutivos-oficina"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 eq-box-lg">
                    <div class="panel" style="border-radius: 12px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">Campañas asignar<label for="ckb-comercial" id="lbEjecutivo"></label></h3>
                        </div>
                        <div class="panel-body">
                            <input id="rdkContactoSi" class="magic-radio" type="radio" name="inline-form-radioContacto" value="SI">
                            <p class="text-semibold text-main">Seleccione una o mas campañas</p>
                            <div class="form-group pad-ver">
                                <label class="col-md-3 control-label">Campañas</label>
                                <div class="col-md-9">

                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-comercial" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-comercial">Comercial</label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtComercial" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-normalizacion" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-normalizacion">Normalización</label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtNormalizacion" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-seguro-cesantia" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-seguro-cesantia">Seguro Cesantia</label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtSegCesantia" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-acuerdo-pago" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-acuerdo-pago">Acuerdo Pago </label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtAcuerdoPago" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-ign" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-ign">IGN</label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtIgn" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="checkbox">
                                        <div class="row">
                                            <div class="col-md-6 mar-btm">
                                                <input id="ckb-pensioados" class="habilitado" type="checkbox" disabled>
                                                <label for="ckb-pensioados">Pensionados</label>
                                            </div>
                                            <div class="col-md-4 mar-btm">
                                                <input type="text" class="form-control" id="txtPensinados" style="width: 50px; border-radius: 7px;" value="0" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="panel-body">
                            <button id="btAsignarEje" class="btn btn-primary" disabled>Asignar Campaña</button>
                            <button id="btCancelar" class="btn btn-warning">Cancelar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="~/Assets/js/vue.js"></script>
    <script src="~/Assets/plugins/switchery/switchery.min.js"></script>
    <script src="~/Assets/js.App/src/dotacion-asignable.js?g=@Guid.NewGuid().ToString()"></script>
}






